<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:orientation="vertical"
    android:layout_marginTop="24dp"
    android:paddingLeft="24dp"
    android:paddingTop="26dp"
    android:paddingRight="24dp"
    tools:context=".ui.auth.signup.SignupSuccessFragment">

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_signup_success"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_sucess1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yeay_completed"
        style="@style/TextView.PoppinsNormal20sp020202"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_success2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_success"
        style="@style/TextView.PoppinsNormal14sp8D92A3"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_sucess1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Find Foods"
        android:textAllCaps="false"
        style="@style/Button.Primary"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_success2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>